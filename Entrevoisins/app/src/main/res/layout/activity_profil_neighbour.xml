<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_white">

<!--photo de profil-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:padding="0dp">
        <!--mettre le lien pour l'avatar/photo de profil-->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cheveux"/>

 <!--Lien du nom de du profil-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/withe"
            android:text="Link profil name"
            android:textSize="25sp"
            android:layout_alignBottom="@id/profile_image"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"

            />
    </RelativeLayout>
<!--Vue du centre-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:padding="20dp"
        android:background="@color/withe"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin">

<!--Lien du nom de du profil-->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link profil name"
            android:textSize="20sp"
            android:layout_marginTop="10dp"


            />
 <!-- comment ne pas prendre en compte le padding pour le diviseur ??-->
        <View
            android:id="@+id/divider3"
            android:layout_width="10000dp"
            android:layout_height="1dp"
            android:layout_below="@+id/profile_name"
            android:background="?android:attr/listDivider"

            />

        <ImageView
            android:id="@+id/vector_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/profile_name"
            android:src="@drawable/ic_baseline_place_24"/>
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adresse localisation"
            android:layout_topRight="@id/vector_place"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/profile_name"

            />
        <ImageView
            android:id="@+id/vector_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/vector_place"
            android:src="@drawable/ic_baseline_phone_24"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adresse localisation"
            android:layout_topRight="@id/vector_phone"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/place"
            />
        <ImageView
            android:id="@+id/vector_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vector_phone"
            android:src="@drawable/ic_baseline_link_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adresse réseau social"
            android:layout_topRight="@id/vector_phone"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/phone"
            />

    </RelativeLayout>
<!-- dernière vu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/withe"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="10dp">
        <TextView
            android:id="@+id/a_propos_de_moi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A propos de moi"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
<!-- il faudra ajouter le lien vers le texte-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_propos_de_moi"
            android:text="Mettre le lien correspondant......................................................................."/>

    </RelativeLayout>


</LinearLayout>